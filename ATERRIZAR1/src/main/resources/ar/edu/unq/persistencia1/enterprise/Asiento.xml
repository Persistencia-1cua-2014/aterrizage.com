<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="ar.edu.unq.persistencia1.enterprise.Vuelo" table="Vuelo">
        <id name="idAsiento" type="integer">
            <column name="idAsiento"/>
            <generator class="identity"/>
        </id>


        <property name="usuario" type="usuario"> 
            <column name="usuario"  not-null="true" unique="true" />
        </property>

        <property name="categoria" type="categoria">
            <column name="categoria_id" not-null="true" unique="true" />
        </property>


    </class>
</hibernate-mapping>